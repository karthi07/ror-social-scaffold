<section class="users-section">
  <ul class="users-list">
    <% @users.each do |user| %>
      <li>
        <button><%= link_to 'Invite to friendship', invitations_path(friend_id: user) , method: :post %></button>
        Name: <%= user.name %>
        <span class="profile-link">
          <%= link_to 'See Profile',  user_path(user), class: 'profile-link' %>
        </span>
      </li>
    <% end %>
  </ul>
</section>
